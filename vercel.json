{
  "version": 2,
  "builds": [
    {
      "src": "api/index.ts", // Input file (source)
      "use": "@vercel/node",
      "config": {
        "installCommand": "npm install --save-dev prisma && npm install",
        "buildCommand": "npx prisma generate && pnpm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", // Catch-all route
      "dest": "/dist/index.js" // Output file (destination)
    }
  ]
}

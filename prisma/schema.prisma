model About {
  id        Int     @id @default(autoincrement())
  value     String
}

model Blog {
  id        Int     @id @default(autoincrement())
  title     String
  body   String
  imageName String
}

model Competence {
  id        Int     @id @default(autoincrement())
  name     String
  rating   Int
}
model Contact {
  id        Int     @id @default(autoincrement())
  platformName     String
  platformUserPageLink   String
  email String
}
model Project {
  id        Int     @id @default(autoincrement())
  name     String
  description   String
  link String
  inDev Boolean
}

model Message {
  id        Int     @id @default(autoincrement())
  email     String
  msg   String
  scheduled DateTime
  createdAt DateTime @default(now())
  isNew Boolean  @default(true)
}

model User {
  id        Int     @id @default(autoincrement())
  userName     String @unique
  password   String
  lastSession DateTime 
}
